{
  "compilerOptions": {
    "baseUrl": "./",
    "downlevelIteration": true,
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "target": "es5",
    "module": "esnext",
    "skipLibCheck": true,
    "sourceMap": false,
    "allowJs": true,
    "strict": true,
    "noImplicitAny": true,
    "lib": ["ES6", "ES7", "DOM"],
    "outDir": "./dist",
    "types": ["jest", "node"],
    "paths": {
      "env": ["./packages/env/src/index.ts"],
      "utils": ["./packages/utils/src/index.ts"],
      "node-utils": ["./packages/node-utils/src/index.ts"],
      "web-utils": ["packages/web-utils/src/index.ts"]
    }
  },
  "include": [
    "packages/**/src",
    "types/*",
    "types",
    "node_modules/@types/*",
    "packages/web-utils/__tests__/url.test.ts"
  ],
  "exclude": [
    "__tests__",
    "dist",
    "temp",
    "node_modules",
    "**/node_modules",
    "scripts/*",
    "demo/*",
    "src/**/**/demo/*",
    "src/packages/**/demo",
    "**/demo/*"
  ]
}
