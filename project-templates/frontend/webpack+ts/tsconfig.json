{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "strict": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es5",
    "allowJs": true,
    "baseUrl": ".",
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@/*": ["src/*"]
    },
    "typeRoots": ["./src/types/", "node_modules/@types/"]
  },
  "include": ["src/**/*"],
  "exclude": ["./baks/**/*", "./build/**"]
}
